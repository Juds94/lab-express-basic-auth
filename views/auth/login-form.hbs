<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1> Inicio de sesión</h1>
            <hr>

            <form action="/inicio-sesion" method="POST">

                <div class="mb-3">

                    <label for="usernameInput" class="form-label"> Username </label>
                    <input type="username" class="form-control" id="usernameInput" name="username">
                </div>

                <div class="mb-3">

                    <label for="pwdInput" class="form-label"> Contraseña </label>
                    <input type="password" class="form-control" id="pwdInput" name="userPwd">

                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block"> Acceder a tu perfil </button>
                </div>

                {{#if errorMessage}}

                <div id="error">

                    <p> {{errorMessage}}</p>
                </div>
                {{/if}}
        </div>

        </form>

    </div>

</div>

</div>